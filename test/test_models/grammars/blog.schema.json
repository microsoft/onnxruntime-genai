{
    "description": "A representation of a blog post",
    "type": "object",
    "required": [
        "title",
        "content",
        "author"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "content": {
            "type": "string"
        },
        "publishedDate": {
            "type": "string"
        },
        "author": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "fullName": {
                    "type": "string"
                },
                "age": {
                    "type": "integer"
                },
                "location": {
                    "type": "string"
                },
                "interests": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}